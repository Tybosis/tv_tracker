.show_slider{
  width: 90%;
  margin:20px auto;
  position:relative;
  overflow: visible;
}

.slideshow_nav{
  height:1px;
  overflow: visible;
  position:absolute;
  width:116%;
  top:35%;
  left:-8%;
  z-index:3000;
}

.show_slider_left{
  background: url(<%= asset_path 'slideshow-left.png' %>) center left;
  left:0;
}

.show_slider_right{
  background: url(<%= asset_path 'slideshow-right.png' %>) center left;
  right:0;
}

.show_slider_left,
.show_slider_right{
  background-size: 100% 100%;
  width:50px;
  height:50px;
  position:absolute;
  cursor:pointer;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.shows_container{
  display:relative;
  overflow:hidden;
  width:100%;
}

.shows_mover{
  position:relative;
  left:0px;
  width:2000px;
  transition:left 1s;
}

.shows_container .show{
  width:100%;
  max-width:150px;
  float:left;
  margin-right:20px;
}

input[type=submit].center{
  display:block;
  margin:2px auto;
}

.show_poster{
  max-width:250px;
}

