<section class="settings">
  <section class="grey">

    <% @profiles.each do |profile| %>
    <section class="twelve columns profile">
      <%= link_to select_profile_path(profile) do %>
        <% if profile.image_url %>
          <%= image_tag asset_path(profile.image_url), :class => 'rounded' %>
        <% else %>
          <%= image_tag asset_path('avatars/avatar-blank.png'), :class => 'rounded' %>
        <% end %>
      <% end %>
      <h1 class="h1profile">Profile Info</h1>
      <h2 class='profile_name'>Current:</h2>
        <p><%= profile.name.capitalize %></p>
      <h2>Add new profile</h2>
      <form>
        <input class="field">
        <button class="add_button">Add</button>
      </form>
    </section>
    <div class="clear">&nbsp;</div>
    <%= link_to 'Edit', edit_profile_path(profile), :class => 'button' %>
    <%= link_to 'Delete', profile, method: :delete, :class => 'button', data: { confirm: 'Do you want to delete this profile?' } %>
    <% end %>
  </section>
  <section class="options">
    <h1>Profile Options</h1>
    <%= render 'index_form' %>
  </section>
  <section class="grey">
    <h1>Password Change</h1>
  </section>
  <section>
    <h1>Delete Profile</h1>
  </section>





